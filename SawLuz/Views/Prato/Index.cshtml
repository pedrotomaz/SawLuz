@model IEnumerable<SawLuz.Models.Prato>

@{
    ViewBag.Title = "Pratos";
}

<h2>Pratos</h2>

<div class="form-group">
    <a href="@Url.Action("Create","Prato")">
        <div class="btn btn-primary">
            Cadastrar Novo Prato
        </div>
    </a>    
</div>

<div class="form-group">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RestauranteId)
            </th>
            <th>
                @Html.DisplayName("Prato")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>                 
               
                    @Html.DisplayFor(modelItem => item.Restaurante.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>

                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
